@require '../../bower_components/normalize.css/normalize.css'
@require 'mixins'
@require 'consts'

// General settings
// Well, not that general

html
  height 100%

body
  font 12px Helvetica, Arial, sans-serif
  // Gray color around #main makes it easier for me to focus
  // Borrowed from last year's page
  background-color body-bg-gray
  height 100%

a
  color a-blue
  text-decoration none
  &:visited
    text-decoration none

ul
  // Remove dots from nav & professors list
  list-style-type none

#header
  z-index 1
  pad-lr-containers(max-content-width)
  +query-min-width-height(header-overflow-width, header-fill-1-3-page-height)
    pad-lr-fixed-containers(max-content-width)
  background-color deeper-bg-gray
  & > h1, h2
    text-align center
    margin-left 20px
    margin-right 20px
  & > h1
    margin-top 0
    padding-top 20px
  & > h2
    margin-bottom 0
    padding-bottom 15px

nav
  pad-lr-containers(max-content-width, 60px)
  +query-max-width-height(header-overflow-width, header-fill-1-3-page-height)
    pad-lr-sticky-containers(max-content-width, 60px)
  font-size 1.6em
  background-color deeper-bg-gray
  opacity 1
  & > a
  // Larger gap between links
    inline-block()
    padding 7px 15px
    text-decoration none
    &:visited
      text-decoration none
    &.current
      background-color white

@media (max-width: nav-overflow-width)
  nav
    padding-top unset
    & > a.current
      display inline-block
      text-align center
    & > a:not(.current)
      display none

section
  pad-lr-containers(max-content-width, 60px)
  background-color white
  min-height 100%
  padding-top 40px
  +query-min-width-height(header-overflow-width, header-fill-1-3-page-height)
    padding-top 160px
  // Gray color is good.
  & > h2
    color section-heading-gray
  // Larger font for texts
  & p,table,ul,ol
    font-size 17px
    line-height 130%
    color section-text-gray
  // Seperators between sections

#logos
  text-align justify
  background-color lighter-bg-gray
  margin-top 30px
  & > a > img
    width 210px
    box-sizing content-box
    margin 20px 20px 0
    vertical-align top
    inline-block()
  &:after
    content ''
    width 100%
    inline-block()

table
  box-sizing content-box
  margin-top 15px
  caption
    display none

#program
  ul
    list-style-type square
  .date
    text-align center
  table
    font-size 1.5em
    & tr:nth-of-type(odd)
      background-color lighter-strip
    & tr:nth-of-type(even)
      background-color deeper-strip
    & td
      padding 10px 10px
      &:first-of-type
        white-space nowrap
      & > span
        display block
        &.title
          padding-top 7px
          font-weight 600
    & td[colspan="2"]
      font-size 1.1em
      background-color deeper-bg-gray

#map
  display none
  margin-top 15px
  & iframe
    width 80vw
    max-width 80%
    height 60vh
    max-height 60%
    margin auto

#venue
  & > ol
    // This is for removing indent of lists of transportation methods
    list-style-position inside
    padding 0
    & > li
      margin 10px 0
