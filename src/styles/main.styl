@require '../../bower_components/pure/base-min.css'
@require '../../bower_components/pure/grids-min.css'
@require 'mixins'


// General settings
// Well, not that general

body
  font 12px Helvetica, Arial, sans-serif
  // Gray color around #main makes it easier for me to focus
  // Borrowed from last year's page
  background-color #F8F8F8

ul
  // Remove dots from nav & professors list
  list-style-type none

ol
  // This is for removing indent of lists of transportation methods
  list-style-position inside
  padding 0

nav
  font-size 1.5em
  // Larger gap between links
  & ul li:not(:first-child)
    padding-top 10px
  // I like the style of links on last year's page
  & a
    color #298CCA
    text-decoration none
    &:visited
      text-decoration none
  &.fixed
    top 0
    position fixed

section
  // Gray color is good.
  margin-right 60px
  & h2
    color #414141
  // Larger font for texts
  & p,table,ul,ol
    font-size 1.3em
    color #444
  // To align with nav when user first open the page
  &:first-child
    padding-top 4px
  // Seperators between sections
  &:not(:last-child):after
    content ''
    display block
    border 1px solid #E8E8E8
    margin 10px 0

#home
  top-level-containers()
  content ''
  display block
  height 130px
  background-color #E8E8E8
  & h1, h2, h3
    text-align center
  & h1
    padding-top 20px
  & h2, h3
    line-height 80%

#main
  top-level-containers()
  padding-up 30px
  background-color #FFF