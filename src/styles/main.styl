@require '../../bower_components/normalize.css/normalize.css'
@require 'mixins'
@require 'consts'

// General settings
// Well, not that general

html
  height 100%

body
  font 12px Helvetica, Arial, sans-serif
  // Gray color around #main makes it easier for me to focus
  // Borrowed from last year's page
  background-color body-bg-gray
  height 100%

ul
  // Remove dots from nav & professors list
  list-style-type none

ol
  // This is for removing indent of lists of transportation methods
  list-style-position inside
  padding 0

#header
  pad-lr-containers(max-content-width)
  background-color deeper-bg-gray
  & > h1, h2, h3
    text-align center
    margin-left 20px
    margin-right 20px
  & > h1
    margin-top 0
    padding-top 20px
  & > h2, h3
    line-height 80%
  & > h3
    margin-bottom 0
    padding-bottom 15px

nav
  pad-lr-sticky-containers(max-content-width, 60px)
  font-size 1.5em
  background-color deeper-bg-gray
  opacity 1
  & > a
  // Larger gap between links
    inline-block()
    padding 7px 15px
    color a-blue
    text-decoration none
    &:visited
      text-decoration none
    &.current
      background-color white

section
  pad-lr-containers(max-content-width, 60px)
  background-color white
  min-height 100%
  padding-top 40px
  // Gray color is good.
  & > h2
    color section-heading-gray
  // Larger font for texts
  & p,table,ul,ol
    font-size 17px
    line-height 130%
    color section-text-gray
  // Seperators between sections

#logos
  text-align justify
  background-color lighter-bg-gray
  & img
    width 210px
    box-sizing content-box
    margin 20px
    vertical-align top
    inline-block()
  &:after
    content ''
    width 100%
    inline-block()

table
  box-sizing content-box
  margin-top 15px
  caption
    display none